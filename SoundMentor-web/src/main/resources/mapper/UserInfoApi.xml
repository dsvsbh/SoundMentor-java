<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soundmentor.soundmentorweb.mapper.OrganizationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.soundmentor.soundmentorpojo.DO.OrganizationDO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="capacity" property="capacity" />
    </resultMap>
    <select id="getUserOrganizationList" resultType="com.soundmentor.soundmentorpojo.DO.OrganizationDO">
        select o.id, o.name, o.description, o.created_time, o.updated_time, o.capacity  from organization_user ou, organization o where ou.organization_id = o.id and ou.user_id = #{userId}
    </select>

</mapper>
