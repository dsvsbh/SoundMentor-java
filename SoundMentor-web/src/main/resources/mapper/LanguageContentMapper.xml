<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soundmentor.soundmentorweb.mapper.LanguageContentMapper">

    <select id="getContentIdsByLanguageAndType" resultType="java.lang.Integer">
        SELECT id
        FROM language_content
        WHERE language = #{language}
        AND type = #{type}
    </select>
</mapper>
